<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Con:</strong>
  <%= @post.con %>
</p>

<p>
  <strong>Cat:</strong>
  <%= @post.cat.name %>
</p>

<%= link_to 'Back', posts_path %>

<p>
  <strong>Comments:</strong>
<table>
  <tbody>
  <% Comment.find_by_post_id(@post.id) do |comment| %>
      <tr>
        <td><%= comment.con %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</p>
