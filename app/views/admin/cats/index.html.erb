<h1>Listing cats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cats.each do |cat| %>
      <tr>
        <td><%= cat.name %></td>
        <td><%= link_to 'Show', admin_cat_path(cat) %></td>
        <td><%= link_to 'Edit', edit_admin_cat_path(cat) %></td>
        <td><%= link_to 'Destroy', admin_cat_path(cat), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

